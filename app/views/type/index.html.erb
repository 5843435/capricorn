 <div class="container">
 <div class="table-responsive">

<h2>結果表示</h2>
<p><b>選んだタイプ</b><br><%= @type %></p>
<p><b>あなたへの格言</b><br><%= simple_format(h(@text)) %></p>
<button class="btn btn-default"><a href='#' onClick="history.back(); return false">戻る</a></button>
<p><p>
参考図書
  <table class="table table-striped table-bordered table-hover table-condensed" id="table_id">
      <tr>
        <th>画像</th>
        <th>タイトル（URL）</th>
        <th>著者名</th>
        <th>定価</th>
        <th>レビュー平均</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book['mediumImageUrl'] %>"></td>
        <td><a href="<%= book['affiliateUrl'] %>" target="_blank"><%= book.title %></a></td>
        <td><%= book.author %></td>
        <td align="right"><%= book['itemPrice'] %>円</td>
        <td align="right"><%= book['reviewCount'] %></td>
      </tr>
      <% end %>
    </table>
 </div>
 </div>