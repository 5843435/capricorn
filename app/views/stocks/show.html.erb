<%- model_class = Stock -%>
<div class="page-header">
  <h1><%= @stock.item.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>単位:</strong></dt>
  <dd><%= @stock.unit %></dd>
  <dt><strong>個数:</strong></dt>
  <dd><%= @stock.num %></dd>
  <dt><strong>1日当たりの消費量:</strong></dt>
  <dd><%= @stock.item.spent_men + @stock.item.spent_women %></dd>
  <dt><strong>なくなる日:</strong></dt>
  <dd><% end_day = @stock.updated_at + (( @stock.num * @stock.unit / ( @stock.item.spent_men + @stock.item.spent_women )).floor * 24 * 3600 ) %>
  <%= end_day.year %>年<%= end_day.month %>月<%= end_day.day %>日</dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stocks_path, :class => 'btn btn-default'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_path(@stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '本当に削除しますか？')) },
              :class => 'btn btn-danger' %>
