<p id="notice"><%= notice %></p>

<h1>在庫一覧</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>商品名</th>
      <th>なくなる日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= link_to stock.item.name, stock if stock.item %></td>
        <td><%= stock.num %></td>
        <td><%= link_to '編集', edit_stock_path(stock) %></td>
        <td><%= link_to '削除', stock, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

